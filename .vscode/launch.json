    "version": "0.2.0",
    "configurations": [
        {
            "name": "[디버깅]현재파일",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "args": [
                "--max_old_space_size=8192",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "[디버깅] 로컬테스트",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/casc-local-test.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--max_old_space_size=8291",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "[디버깅] 리모트테스트",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/casc-remote-test.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--max_old_space_size=8291",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\test.js"
        }
    ]
}